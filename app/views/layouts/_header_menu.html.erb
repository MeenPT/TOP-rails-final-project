<button 
  popovertarget="header__menu"
  style="anchor-name:--header-menu" 
  class="cursor-pointer">
  <div class="bg-white rounded-full w-fit">
    <%= image_tag current_user.profile.avatar.attached? ? current_user.profile.avatar.variant(:thumb) : "avatar_placeholder.png", alt: "user avatar", class: "size-10 rounded-full object-cover" %>
  </div>
</button>
<div
  popover
  id="header__menu"
  style="position-anchor:--header-menu"
  class="mt-4 shadow-sm dropdown dropdown-end lg:dropdown-center menu w-52 rounded-box bg-base-100">
  <div class="p-2 mb-2" >
    <p class="font-medium"><%= current_user.profile.display_name %></p>
    <span class="text-xs text-neutral"><%= "@#{current_user.username}" %></span>
  </div>
  <ul>
    <li>
      <%= link_to current_user.profile, class: "flex items-center" do %>
        <svg class="mr-3 size-5" xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-user-circle"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855" /></svg>
        My profile
      <% end %>
    </li>
  </ul>
  <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "flex-1 btn w-full btn-dash mt-2" %>
</div>