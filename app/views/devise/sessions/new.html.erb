<h1 class="text-4xl font-bold text-center text-primary">Login</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: DaisyFormBuilder ,class: "mt-8") do |f| %>
  <div>
    <div class="fieldset">
      <%= f.label :email %>
      <%= f.text_field :email, autocomplete: "email", autofocus: true %>
      <%= f.error :email %>
    </div>
    <div class="fieldset">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.error :password %>
    </div>
  </div>
  <div class="mt-8">
    <%= f.submit "Continue", class: "btn btn-primary w-full" %>
  </div>
<% end %>
<div class="mt-3 text-sm text-center">
  Don't have an account? <%= link_to "Register", new_user_registration_path, class: "text-primary ml-1 hover:underline" %>
</div>
