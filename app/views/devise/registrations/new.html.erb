<h1 class="text-4xl font-bold text-center text-primary">Register</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: DaisyFormBuilder ,class: "mt-8") do |f| %>
  <div>
    <div class="fieldset">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
      <%= f.error :username %>
    </div>
    <div class="fieldset">
      <%= f.label :email %>
      <%= f.text_field :email, autocomplete: "email" %>
      <%= f.error :email %>
    </div>
    <div class="fieldset">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.error :password %>
    </div>
    <div class="fieldset">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= f.error :password_confirmation %>
    </div>
  </div>
  <div class="mt-8">
    <%= f.submit "Create Account", class: "btn btn-primary w-full" %>
  </div>
<% end %>
<div class="mt-3 text-sm text-center">
  Already have an account? <%= link_to "Login", new_user_session_path, class: "text-primary ml-1 hover:underline" %>
</div>
