<% content_for :title, "Edit post" %>
<% if turbo_frame_request? %>
  <%= turbo_frame_tag @post do %>
    <dialog class="modal modal-open">
      <div class="modal-box">
        <h3 class="text-lg font-bold">Edit Post</h3>
        <div class="py-4">
          <%= render "form", post: @post %>
        </div>
      </div>
    </dialog>
  <% end %>
<% else %>
  <h1 class="mb-10 text-4xl font-bold">Edit post</h1>
  <div class="p-8 shadow bg-base-100 rounded-box">
    <%= render "form", post: @post %>
  </div>
<% end %>
