<div class="bg-base-200 aspect-[4/3] rounded-box relative" data-controller="carousel">
  <!--IMAGES-->
  <% post.images.each_with_index do |image, i| %>
    <%= image_tag image.variant(resize_to_limit: [560, 420]),
                  class: "size-full absolute inset-0 object-cover bg-center rounded-box transition-all duration-300",
                  data: { index: i, carousel_target: "image" },
                  loading: :lazy %>
  <% end %>
  <!--PREV/NEXT BUTTONS-->
  <div class="absolute inset-x-0 flex justify-between px-6 -translate-y-1/2 top-1/2">
    <button class="btn btn-square btn-soft btn-circle" data-action="carousel#previous">
      <span class="sr-only">Previous Image</span>
      <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-left"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6" /></svg>
    </button>
    <button class="btn btn-square btn-soft btn-circle" data-action="carousel#next">
      <span class="sr-only">Next Image</span>
      <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 6l6 6l-6 6" /></svg>    </button>
  </div>
  <!--INDICATORS-->
  <div class="absolute inset-x-0 flex justify-center bottom-6 gap-x-2">
    <% post.images.each_with_index do |_, i| %>
      <button class="bg-white rounded-full opacity-50 cursor-pointer size-4" data-index="<%= i %>" data-carousel-target="indicator" data-action="carousel#jumpTo">
      </button>
    <% end %>
  </div>
</div>